{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Capstone list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Description</th>
                <th>Steps</th>
                <th>Application</th>
                <th>Mentor</th>
                <th>Timeframe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('capstone_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.steps }}</td>
                <td>{{ entity.application }}</td>
                <td>{{ entity.mentor }}</td>
                <td>{{ entity.timeframe }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('capstone_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('capstone_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('capstone_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
