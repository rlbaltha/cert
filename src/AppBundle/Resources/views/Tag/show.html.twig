{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-sm-3">
            <div class="bootstrap-vertical-nav">
                <nav class="navbar navbar-dark">
                    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse"
                            data-target="#exCollapsingNavbar2">
                        &#9776;
                    </button>
                    <div class="collapse navbar-toggleable-sm" id="exCollapsingNavbar2">
                        <ul class="nav navbar-sidenav">
                            <li class="nav-item"><a href="{{ path('tag_new') }}">
                                    New Tag
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('tag') }}">
                                    Back to the list
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

            </div>
        </div>
        <div class="col-sm-8">
            <h1>Tag</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Title</th>
                    <td><div class="btn btn-primary" style="background-color: {{ entity.color }}">{{ entity.title }}</div> </td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>{{ entity.color }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('tag_edit', { 'id': entity.id }) }}">
                Edit
            </a>
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
