{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary pull-right" href="{{ path('user', { 'type': 'Faculty' }) }}">Faculty</a>
            <a class="btn btn-primary pull-right" href="{{ path('user', { 'type': 'Students' }) }}">Students</a>
            <h1>{{ app.request.get('type') }} list</h1>


            <table class="table">
                <thead>
                <tr>
                    <th>Lastname</th>
                    <th>Firstname</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Role(s)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.lastname }}</a></td>
                        <td>{{ entity.firstname }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.status }}</td>
                        <td>{% for role in entity.roles %} {{ role }} {% endfor %}</td>
                        <td>
                                    <a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                         </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
