{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-sm-8">
            <table class="table">
                <thead>
                <tr>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Portfolio</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.lastname }}</td>
                        <td>{{ entity.firstname }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{% if entity.checklist %}<a href="{{ entity.checklist.portfolio }}" target="_blank">{{ entity.checklist.portfolio }}</a>{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <p>Email
                list: <span id="email_list">{% for entity in entities %}{{ entity.email }}{% if not loop.last %}; {% endif %}{% endfor %}</span></p>

        </div>

    </div>

{% endblock %}
