{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-sm-2">
            <div class="bootstrap-vertical-nav">

                <nav class="navbar  navbar-dark bg-inverse">
                    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse"
                            data-target="#exCollapsingNavbar2">
                        &#9776;
                    </button>
                    <div class="collapse navbar-toggleable-sm" id="exCollapsingNavbar2">
                        <ul class="nav navbar-nav">
                            <li class="nav-item">
                                <a href="{{ path('forum') }}">
                                    List Forums
                                </a>
                            </li>
                        </ul>

                        {% if is_granted('ROLE_ADMIN') %}
                            <ul class="nav navbar-nav">
                                <li class="nav-item"><a href="{{ path('forum_new') }}">
                                        New Thread
                                    </a></li>
                            </ul>
                        {% endif %}
                    </div>
                </nav>

            </div>
        </div>

        <div class="col-sm-10">
            <div class="card card-block">
                <h4 class="card-title">
                    {{ entity.title }}
                </h4>
                {{ entity.body|raw }}
                <a class="btn btn-primary" href="{{ path('forum_new', {'id':entity.id}) }}">Respond</a>


                {% for entity in entity.children %}
                    <div class="card card-block">
                        {% if app.user.username == entity.user.username %}
                        <a href="{{ path('forum_edit', { 'id': entity.id }) }}"
                           class="pull-sm-right btn btn-primary">Edit</a>
                        {% endif %}
                        <h4 class="card-title">
                            <a href="{{ path('forum_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                        </h4>
                        {{ entity.body|raw }}

                        {% for entity in entity.children %}
                            <div class="card card-block">
                                <a href="{{ path('forum_edit', { 'id': entity.id }) }}"
                                   class="pull-sm-right btn btn-primary">Edit</a>
                                <h4 class="card-title">
                                    <a href="{{ path('forum_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                                </h4>
                                {{ entity.body|raw }}

                                {% for entity in entity.children %}
                                    <div class="card card-block">
                                        <a href="{{ path('forum_edit', { 'id': entity.id }) }}"
                                           class="pull-sm-right btn btn-primary">Edit</a>
                                        <h4 class="card-title">
                                            <a href="{{ path('forum_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                                        </h4>
                                        {{ entity.body|raw }}

                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
