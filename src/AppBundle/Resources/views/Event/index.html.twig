{% extends '::base.html.twig' %}

{% block stylesheets%}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}" />
{% endblock %}


{% block body -%}
    <div class="row">
        <div class="col-sm-3">
            <div class="bootstrap-vertical-nav">

                <nav class="navbar navbar-dark">
                    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse"
                            data-target="#exCollapsingNavbar2">
                        &#9776;
                    </button>
                    <div class="collapse navbar-toggleable-sm" id="exCollapsingNavbar2">
                        <ul class="nav navbar-sidenav">
                            {% if section %}
                                {% for page in section.pages if section %}
                                    {% if (page.link is null or page.link == '') %}
                                        <li class="nav-item"><a
                                                    href="{{ path('page_show', { 'id': page.id }) }}">{{ page.title }}</a>
                                        </li>
                                    {% else %}
                                        <li class="nav-item"><a href="{{ page.link }}">{{ page.title }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item"><a href="{{ path('event_new') }}">New Event</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>

            </div>
        </div>
        <div class="col-sm-8">
            <a class="btn btn-primary float-sm-right" href="http://sustainability.uga.edu/events">Campus Sustainability
                Events</a>
            <h1>Certificate Calendar</h1>

            {% include 'ADesignsCalendarBundle::calendar.html.twig' %}

            <hr/>

            {% for event in entities %}
                <div id="{{ event.id }}" class="card card-block">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary pull-xs-right" href="{{ path('event_edit', {'id':event.id}) }}">
                            Edit
                        </a>
                    {% endif %}
                    <h3 class="card-title">{{ event.title }}</h3>
                    <p class="card-text">{{ event.datetime|date("l, F d") }} {% if event.datetime|date("g:i A") == "12:00 AM" %}{% else %}{{ event.datetime|date("g:i A") }}{% endif %}</p>
                    <p class="card-text">{{ event.body|raw }}</p>
                </div>

            {% else %}
                <div class="card card-text">
                    <p>There are no events at this time. Please check back soon.</p>
                </div>

            {% endfor %}
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/adesignscalendar/js/jquery/jquery-1.8.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/adesignscalendar/js/fullcalendar/jquery.fullcalendar.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/ical.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/ical_events.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/ical_fullcalendar.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/colorize_fullcalendar.js') }}"></script>


    <script language="javascript">

        ics_sources = [
            {url:'https://localhost/cert/web/events.ics',event_properties:{color:'green'}},
        ]


        function data_req (url, callback) {
            req = new XMLHttpRequest()
            req.addEventListener('load', callback)
            req.open('GET', url)
            req.send()
        }

        function add_recur_events() {
            if (sources_to_load_cnt < 1) {
                $('#calendar').fullCalendar('addEventSource', expand_recur_events)
            } else {
                setTimeout(add_recur_events, 30)
            }
        }

        function load_ics(ics){
            data_req(ics.url, function(){
                $('#calendar-holder').fullCalendar('addEventSource', fc_events(this.response, ics.event_properties))
                sources_to_load_cnt -= 1
            })
        }


        $('#calendar-holder').fullCalendar({
            header: {
                left: 'prev, next',
                center: 'title',
                right: 'month, basicWeek, basicDay,'
            },
            lazyFetching: true,
            timeFormat: {
                // for agendaWeek and agendaDay
                agenda: 'h:mmt',    // 5:00 - 6:30

                // for all other views
                '': 'h:mmt'         // 7p
            },
            eventClick: function(calEvent, jsEvent, view) {
                jQuery.noConflict();
                $('#myModal').modal('show');
                var eventid = '#' + calEvent.id;
                var htmlString = $( eventid ).html();
                $( ".modal-body" ).html( htmlString);

            },
            events: [
                {% for event in entities %}
                {
                    title  : '{{ event.title| escape('js') }}',
                    start  : '{{ event.datetime|date('j M Y') }} {{ event.datetime|date('H:i:s', false) }}',
                    allDay : false,
                    textColor: 'white',
                    backgroundColor: '#971c1e',
                    borderColor: '#971c1e',
                    body: '{{ event.body| escape('js') }}',
                    id: '{{ event.id }}',
                },
                {% endfor %}
            ],
        })
        sources_to_load_cnt = ics_sources.length
        for (ics of ics_sources) {
            load_ics(ics)
        }

    </script>
{% endblock %}