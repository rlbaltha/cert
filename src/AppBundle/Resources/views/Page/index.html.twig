{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-sm-2">
        <div class="bootstrap-vertical-nav">

            <nav class="navbar  navbar-dark bg-inverse">
                <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
                    &#9776;
                </button>
                <div class="collapse navbar-toggleable-sm" id="exCollapsingNavbar">
                    <ul class="nav navbar-nav">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a href="{{ path('page_new') }}">New Page</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>

        </div>
    </div>


    <div class="col-sm-10">
        <h1>Pages</h1>


        <table class="table">
            <thead>
            <tr class="sr-only">
                <th>Title</th>
                <th>Body</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                    <td>{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('page_edit', { 'id': entity.id }) }}">edit</a>{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}
