{% extends '::base.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-sm-2">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Sidebar menu</span>
                    </div>
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav">
                            {% for page in entity.section.pages %}
                                {% if (page.link is null or page.link == '') %}
                                    <li><a href="{{ path('page_show', { 'id': page.id }) }}">{{ page.title }}</a></li>
                                {% else %}
                                    <li><a   href="{{ page.link }}">{{ page.title }}</a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="col-sm-9">
            {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-default pull-right" href="{{ path('page_edit', { 'id': entity.id }) }}">Edit</a>{% endif %}
            <h1>{{ entity.title }}</h1>
            {{ entity.body|raw }}
        </div>
    </div>

{% endblock %}
