{% extends '::base.html.twig' %}

{% block body -%}
<div class="col-sm-12">
    <a class="btn btn-primary float-sm-right" href="{{ path('user_show', { 'id': entity.capstone.user.id }) }}">Return to Work Plan</a>
    <h2>Responses</h2>
    {% for response in entity.responses %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ response.question.question |raw }}</h3>
            </div>
            <div class="card-block">
                {{ response.response|raw }}
            </div>
        </div>
    {% endfor %}

    </div>
{% endblock %}
