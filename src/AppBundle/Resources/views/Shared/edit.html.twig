{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function () {
            $('#delete_form').toggle();
            $("#confirm_btn, #cancel_btn").click(function () {
                $('#edit_form').toggle();
                $('#delete_form').toggle();
            });
            $( 'i' ).switchClass(  'glyphicon', 'fa' );
            $( 'i' ).switchClass( 'glyphicon-arrow-right', 'fa-angle-right' );

            $("form:not(.filter) :input:visible:enabled:first").focus();
        });
    </script>
    {{ form_javascript(edit_form) }}
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-sm-8 offset-sm-2 col-xs-12">
            <div id="edit_form">
                {{ form(edit_form) }}
                <a class="btn btn-danger" href="javascript:void(0)" id="confirm_btn">Delete</a>
            </div>
            <div id="delete_form">
                {{ form(delete_form) }}
                <a class="btn btn-secondary" href="javascript:void(0)" id="cancel_btn">Cancel</a>
            </div>
        </div>
    </div>
{% endblock %}
