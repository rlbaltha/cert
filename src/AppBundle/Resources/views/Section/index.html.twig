{% extends '::base.html.twig' %}

{% block body -%}
    <a class="btn btn-primary pull-xs-right" href="{{ path('section_new') }}">
        New Section
    </a>
    <h1>Section list</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Header</th>
            <th>Masthead</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('section_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.header }}</td>
                <td>{{ entity.masthead }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('section_edit', { 'id': entity.id }) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
