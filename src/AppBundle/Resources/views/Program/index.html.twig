{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Program list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>School</th>
                <th>Major</th>
                <th>Graddate</th>
                <th>Interest</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('program_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.school }}</td>
                <td>{{ entity.major }}</td>
                <td>{{ entity.graddate }}</td>
                <td>{{ entity.interest }}</td>
                <td>{{ entity.notes }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('program_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('program_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('program_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
