{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Partner list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Purpose</th>
                <th>Background</th>
                <th>Contribution</th>
                <th>Details</th>
                <th>Deliverables</th>
                <th>Outcomes</th>
                <th>Considerations</th>
                <th>Sources</th>
                <th>Qualifications</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('partner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.purpose }}</td>
                <td>{{ entity.background }}</td>
                <td>{{ entity.contribution }}</td>
                <td>{{ entity.details }}</td>
                <td>{{ entity.deliverables }}</td>
                <td>{{ entity.outcomes }}</td>
                <td>{{ entity.considerations }}</td>
                <td>{{ entity.sources }}</td>
                <td>{{ entity.qualifications }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('partner_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('partner_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('partner_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
