{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-sm-2">
        <div class="sidebar-nav">
            <div class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target=".sidebar-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="visible-xs navbar-brand">Courses</span>
                </div>
                <div class="navbar-collapse collapse sidebar-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav navbar-header">Undergraduate</li>
                        <li><a href="{{ path('course', { 'pillar':'anchor', 'level':'undergrad' }) }}">Anchor</a></li>
                        <li><a href="{{ path('course', { 'pillar':'ecological', 'level':'undergrad' }) }}">Ecological</a></li>
                        <li><a href="{{ path('course', { 'pillar':'economic', 'level':'undergrad' }) }}">Economic</a></li>
                        <li><a href="{{ path('course', { 'pillar':'social', 'level':'undergrad' }) }}">Social</a></li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav navbar-header">Graduate</li>
                        <li><a href="{{ path('course', { 'pillar':'anchor', 'level':'grad' }) }}">Anchor</a></li>
                        <li><a href="{{ path('course', { 'pillar':'ecological', 'level':'grad' }) }}">Ecological</a></li>
                        <li><a href="{{ path('course', { 'pillar':'economic', 'level':'grad' }) }}">Economic</a></li>
                        <li><a href="{{ path('course', { 'pillar':'social', 'level':'grad' }) }}">Social</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="col-sm-9">
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-default pull-right" href="{{ path('course_new') }}">
                New Course
            </a>
        {% endif %}
        <h1>Courses ({{ app.request.get('level') }}: {{ app.request.get('pillar') }})</h1>
        <p>Students are required to take a minimum of 17 credit hours to earn the Sustainability Certificate. The Certificate consists of the following components:
        <ol>
            <li>Anchor course (3 credit hours)</li>
            <li>One course from each of 3 pillars (9 credit hours)</li>
            <li>Seminar (2 credit hours)</li>
            <li>Capstone project (3 credit hours)</li>
        </ol>
        </p>

        <table class="table sort">
            <thead>
            <tr>
                <th>Name</th>
                <th>Title</th>
                <th class="hidden-xs">Offered</th>
                <th class="hidden-xs">Prereqs</th>
                <th class="hidden-xs">Pillar</th>
                <th class="hidden-xs">Level</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th class="hidden-xs">Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('course_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td class="hidden-xs">{{ entity.offered }}</td>
                    <td class="hidden-xs">{{ entity.prereqs }}</td>
                    <td class="hidden-xs">{{ entity.pillar }}</td>
                    <td class="hidden-xs">{{ entity.level }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="hidden-xs">
                            <a href="{{ path('course_edit', { 'id': entity.id }) }}">edit</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}
