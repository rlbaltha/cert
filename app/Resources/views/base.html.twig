<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="initial-scale=1">
    <title>{% block title %}Sustainability Certificate{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
        <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.22.5/css/theme.bootstrap.min.css">
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/app/css/local.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>

<div class="container-fluid">
<header>

        <nav class="navbar navbar-default">


            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="" href="{{ path('homepage') }}" class="pull-left"><img class="img-responsive navbar-logo" src="{{ asset('bundles/app/images/sustainabilitynavlogo.jpg') }}"></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <a class="navbar-brand" href="{{ path('homepage') }}">Certificate</a>
                <ul class="nav navbar-nav">
                    <li id="skip">
                        <a id="main_nav" href="#main_content">Skip Navigation</a>
                    </li>
                    <li><a href="{{ path('page') }}">Requirements</a></li>
                    <li><a href="{{ path('course') }}">Courses</a></li>
                    <li><a href="{{ path('faculty') }}">Faculty</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" style="padding-right: 20px;">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li>
                            <a class="" href="{{ path('homepage') }}">Help</a>
                        </li>

                        <li>
                            <a title="Logout" href="{{ path('fos_user_security_logout') }}">Logout</a>
                        </li>
                    {% else %}
                        <li>
                            <a title="Login" href="http://cicr.uga.edu/">CICR</a>
                        </li>
                        <li>
                            <a title="Login" href="http://sustainability.uga.edu/">Office of Sustainability</a>
                        </li>
                        <li>
                            <a title="Login" href="{{ path('fos_user_security_login') }}">Login</a>
                        </li>
                    {% endif %}
                    <li id="skip">
                        <a id="main_content" href="#main_nav">Skip to Top</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
</header>

<section class="main-content">
        <div class="col-xs-12 col-sm-12">
            {% block body %}{% endblock %}
            {% block javascripts %}
                <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
                <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/tinysort/2.2.2/tinysort.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.22.5/js/jquery.tablesorter.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.22.5/js/jquery.tablesorter.widgets.min.js"></script>
            {% endblock %}
        </div>

</section>
</div>
</body>
</html>
